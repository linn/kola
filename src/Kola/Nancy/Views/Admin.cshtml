@inherits Nancy.ViewEngines.Razor.NancyRazorViewBase<dynamic>
@using Kola.Nancy.Extensions
<!DOCTYPE html>
<html>
<head>
    <title>Kola CMS</title>
    <link type="text/css" rel="stylesheet" href="/_kola/Content/kola.css" />
    @foreach (var stylesheet in Model.EditorStylesheets)
    {
    <link type="text/css" rel="stylesheet" href="@stylesheet" />
    }
</head>
<body>
    <div id="navigation"></div>
    <div id="content"></div>
    <script type="text/javascript" src="/Scripts/require.js" data-main="/_kola/Scripts/main"></script>
    <script type="text/javascript">
        define('propertyEditors', function () {
            return @Html.Raw(this.Model.PropertyEditors);
        });
    </script>
</body>
</html>
