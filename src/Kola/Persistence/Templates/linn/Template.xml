<?xml version="1.0" encoding="utf-8"?>
<template xmlns:xsd="http://www.w3.org/2001/XMLSchema" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://www.kolacms.com/2013/kola">
  <components>
    <widget name="page">
      <properties>
        <property name="colour" type="text">
          <value xsi:type="fixed"><![CDATA[green]]></value>
        </property>
        <property name="title" type="text">
          <value xsi:type="fixed"><![CDATA[Linn — Network Music Players]]></value>
        </property>
        <property name="description" type="text">
          <value xsi:type="fixed"><![CDATA[All about our network music players]]></value>
        </property>
        <property name="cache-buster" type="text">
          <value xsi:type="fixed"><![CDATA[19Jan15]]></value>
        </property>
      </properties>
      <areas>
        <area name="content">
          <components>
            <atom name="main-menu">
              <properties />
            </atom>
            <atom name="secondary-nav">
              <properties />
            </atom>
            <container name="carousel">
              <properties>
                <property name="infinity-scroll" type="boolean">
                  <value xsi:type="fixed"><![CDATA[true]]></value>
                </property>
                <property name="slide-per-page" type="boolean">
                  <value xsi:type="fixed"><![CDATA[false]]></value>
                </property>
                <property name="alignment" type="carousel-alignment">
                  <value xsi:type="fixed"><![CDATA[left]]></value>
                </property>
                <property name="preview-previous" type="number">
                  <value xsi:type="fixed"><![CDATA[0]]></value>
                </property>
                <property name="preview-next" type="number">
                  <value xsi:type="fixed"><![CDATA[0.2]]></value>
                </property>
                <property name="preview-threshold" type="number">
                  <value xsi:type="fixed"><![CDATA[700]]></value>
                </property>
              </properties>
              <components />
            </container>
          </components>
        </area>
        <area name="scripts">
          <components />
        </area>
      </areas>
    </widget>
  </components>
  <amendments />
</template>