<div class="content">
    <div class="accordian">
        {{#each .}}
        <span class="accordian-header no-select">{{name}}<i class="fa fa-chevron-down"></i></span>
        <div class="accordian-content">
            {{#each items}}
            <button type="button" class="tool {{type}}" data-href='{{id}}'><span>{{name}}</span></button>
            {{/each}}
        </div>
        {{/each}}
    </div>
</div>
<div class="footer">
    <button type="button" disabled="true" class="toolbox-settings"><i class="fa fa-cog fa-lg"></i></button>
</div>
