@inherits Nancy.ViewEngines.Razor.NancyRazorViewBase<Kola.Domain.Instances.AtomInstance>
@using System.Linq
@using Kola.Domain.Extensions
@{
    var allAttributes = new[] {
        Model.Properties.GetAsAttribute("name"),
        Model.Properties.GetAsAttribute("property"),
        Model.Properties.GetAsAttribute("content"),
        Model.Properties.GetAsAttribute("httpEquiv"),
        Model.Properties.GetAsAttribute("charset")
    };
    var attributes = string.Join(" ", allAttributes.Where(a => !string.IsNullOrWhiteSpace(a)));
}    <meta @Html.Raw(attributes)/>
